<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dell.diary">

    <!-- 申请权限存取图片，误删！ -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 文件操作，误删！ -->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <!-- 支持多分辨率 -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Main">
        <activity
            android:name=".TimeLineActivity"
            android:label="HeartTrace" />
        <activity android:name=".StatisticsActivity" />
        <activity android:name=".DiaryActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".BottleWriteActivity" />
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:theme="@style/calendar" />
        <activity
            android:name=".DiaryWriteActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name=".TicketEditActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".BottlefrontActivity" />
        <activity android:name=".NoteActivity" />
        <activity android:name=".BottlesActivity" />
        <activity android:name=".SearchResultActivity" />
        <activity android:name=".LabelManageActivity" />
        <activity android:name=".CollectActivity" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".PersonalInformationActivity" />
        <activity android:name=".RegisterActivity"></activity>

        <!-- Note: the followings are added for authentication (stub). If anything unpredicted happens tell us. -->
        <service
            android:name="com.example.dell.sync.stub.auth.AuthenticatorService"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- Note: the followings are added for synchronization. If anything unpredicted happens tell us. -->
        <provider
            android:name="com.example.dell.sync.stub.provider.StubProvider"
            android:authorities="com.example.dell.sync.stub.provider"
            android:exported="false"
            android:syncable="true" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.rachel.studyapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <!--提供共享路径-->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>


        <service
            android:name="com.example.dell.sync.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

    </application>

    <!--Note: the following pemissions are added for synchronization. -->
    <uses-permission
        android:name="android.permission.INTERNET"/>
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>


</manifest>