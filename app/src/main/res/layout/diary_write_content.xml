<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/diaryWriteLayout">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_diary_content"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/OverflowMenuStyle">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/diaryViewPager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/date_layout">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/diary_content_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/diary_content_weekday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_gravity="center"
                        />
                    <RelativeLayout
                        android:id="@+id/icon_layout"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/diary_content_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:clickable="true"
                            android:longClickable="true"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/diary_content_icon1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:visibility="invisible"
                            android:longClickable="true"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/diary_content_icon2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:visibility="invisible"
                            android:longClickable="true"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/diary_content_icon3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:visibility="invisible"
                            android:longClickable="true"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/diary_content_icon4"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:visibility="invisible"
                            android:longClickable="true"
                            android:scaleType="centerCrop"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/diaryWrite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null" />

                </android.support.design.widget.TextInputLayout>

            </ScrollView>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/floating_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/add_black"
                android:scaleType="centerCrop"
                app:backgroundTint="#ffffff"
                 />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#ffffff"
                android:src= "@drawable/add_diary_black"
                android:scaleType="centerCrop"
                app:layout_constraintCircle="@id/add"
                app:layout_constraintCircleRadius="70dp"
                app:layout_constraintCircleAngle="225"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#ffffff"
                android:src = "@drawable/edit_black"
                android:scaleType="centerCrop"
                app:layout_constraintCircle="@id/add"
                app:layout_constraintCircleRadius="70dp"
                app:layout_constraintCircleAngle="280"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/enterBottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#ffffff"
                android:src = "@drawable/bottle_black"
                android:scaleType="centerCrop"
                app:layout_constraintCircle="@id/add"
                app:layout_constraintCircleRadius="70dp"
                app:layout_constraintCircleAngle="335"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#ffffff"
                android:src = "@drawable/unlike"
                android:scaleType="centerCrop"
                app:layout_constraintCircle="@id/add"
                app:layout_constraintCircleRadius="70dp"
                app:layout_constraintCircleAngle="30"/>

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/empty"/>

        <LinearLayout
            android:id="@+id/settings_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">


            <ImageButton
                android:id="@+id/font_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/font_setting" />

            <ImageButton
                android:id="@+id/theme_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/theme_setting" />

            <ImageButton
                android:id="@+id/insert_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/get_image" />

            <ImageButton
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/confirm" />

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
